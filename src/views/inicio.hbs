<head>

  <script src="https://www.google.com/jsapi" type="text/javascript"></script>

  <style>
    #view-source {
      position: fixed;
      display: block;
      right: 0;
      bottom: 0;
      margin-right: 40px;
      margin-bottom: 40px;
      z-index: 900;
    }

    .progress {
      height: 180px;
      z-index: 1 !important;
      width: fit-content;
      margin: auto;

    }

    .progress>svg {
      height: 100%;
      display: block;
    }

    .cAire {

      position: absolute;
      top: 42%;
      left: 0%;
      right: 0;
      bottom: 0;
      margin: auto;

    }

    .cAire>p {
      color: darkgray !important;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif !important;
      font-size: 32px;
    }

    .contr {

      text-align: center;
      position: relative !important;

    }
  </style>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    {{#with meds}}
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Modulo#', 'Particulas por Millon'],
          ['Modulo {{this.[0].ELEMENTOS_MEDICION_ID}}',  parseFloat('{{this.[0].CANTIDAD_PARTICULAS}}')],
          ['Modulo {{this.[1].ELEMENTOS_MEDICION_ID}}',  parseFloat('{{this.[1].CANTIDAD_PARTICULAS}}')],
          ['Modulo {{this.[2].ELEMENTOS_MEDICION_ID}}',  parseFloat('{{this.[2].CANTIDAD_PARTICULAS}}')],
          ['Modulo {{this.[3].ELEMENTOS_MEDICION_ID}}',  parseFloat('{{this.[3].CANTIDAD_PARTICULAS}}')],
          ['Modulo {{this.[4].ELEMENTOS_MEDICION_ID}}',  parseFloat('{{this.[4].CANTIDAD_PARTICULAS}}')]
        ]);

        var options = {
          title: 'Ultimas lecturas recibidas',
          hAxis: {title: '#Modulo',  titleTextStyle: {color: '#333'}},
          vAxis: {minValue: 0}
        };

        var chart = new google.visualization.AreaChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
    {{/with}}
</head>

<body>
  <main class="mdl-layout__content mdl-color--grey-100">
    <div class="mdl-grid demo-content">
      <div class="demo-charts mdl-color--white mdl-shadow--2dp mdl-cell mdl-cell--12-col mdl-grid">
        {{#each modulos}}
        <div class="demo-chart mdl-cell mdl-cell--4-col mdl-cell--3-col-desktop contr">
          <div class="cAire" id="cAire{{@index}}">
            <p>Mod
              {{this.ID}}:
              {{#with (lookup ../mediciones @index)}}
              {{this.[0].CALIDAD_AIRE}}
              {{/with}}
            </p>
          </div>
          <div class="progress" id="progress{{@index}}">

          </div>
        </div>
        {{/each}}
      </div>
      <div class="demo-graphs mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--12-col">
        <div id="chart_div" style="width: 100%; height: 500px;"></div>
      </div>
      </div>
    </div>
  </main>
  </div>

  
  <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>
  <script src="https://cdn.rawgit.com/kimmobrunfeldt/progressbar.js/0.5.6/dist/progressbar.js"></script>
  <script>

  </script>
  {{#each modulos}}
  <script>

    $(document).ready(() => {

      var circle = new ProgressBar.Circle('#progress' + '{{@index}}', {
        strokeWidth: 6,
        color: getRandomColor(),
        duration: 3000,
        easing: 'easeInOut'
      });

      circle.animate(parseFloat('{{#with (lookup ../mediciones @index)}}{{this.[0].CALIDAD_AIRE}}{{/with}}') / 5);

    }

    );

    function getRandomColor() {
      var letters = '0123456789ABCDEF';
      var color = '#';
      for (var i = 0; i < 6; i++) {
        color += letters[Math.floor(Math.random() * 16)];
      }
      return color;
    }



  </script>
  {{/each}}
</body>